<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/newsPicture">


    <ImageView
        android:id="@+id/newsHeaderLogo"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:layout_gravity="top"
        android:layout_margin="5dp"
        android:layout_weight="0.5"
        android:padding="2dp"
        android:src="@drawable/powerline" />


    <TextView
        android:id="@+id/newsHeaderTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/newsHeaderLogo"
        android:maxLines="2"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:padding="2dp"
        android:text="200MW of electricity has been provided in Nigeria and other countries"
        android:textColor="@color/white"
        android:background="@color/transparentBadge"
        android:textSize="15sp"
        android:textStyle="bold"/>

</RelativeLayout>