<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ugarsoft.chyma.iwin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.ugarsoft.chyma.iwin.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.ugarsoft.chyma.iwin.permission.C2D_MESSAGE" />

    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.SplashActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.base.AccessActivity"
            android:label="@string/title_activity_access" />
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.base.HomeActivity"
            android:label="@string/title_activity_home" />
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.base.PowerStatsActivity"
            android:label="@string/powerstats" />
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.base.AnnouncementActivity"
            android:label="@string/announcement" />
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.base.ManageBillActivity"
            android:label="@string/manageBills" />
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.base.EPaymentActivity"
            android:label="@string/ePayment" />
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.base.OtherActivity"
            android:label="@string/Other" />
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.base.ContactActivity"
            android:label="@string/operatorContact" />
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.EstimateBillsActivity"
            android:label="@string/estimateBills">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ugarsoft.chyma.iwin.activities.base.ManageBillActivity" />
        </activity>
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.SendMailActivity"
            android:label="Contact Support">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ugarsoft.chyma.iwin.activities.SupportActivity" />
        </activity>
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.VerifyPurchaseActivity"
            android:label="@string/verifyPurchase">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ugarsoft.chyma.iwin.activities.base.ManageBillActivity" />
        </activity>
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.WebViewActivity"
            android:label="@string/payment_channel">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ugarsoft.chyma.iwin.activities.base.EPaymentActivity" />
        </activity>
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.OfficeTipsActivity"
            android:label="@string/officeTips" />
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.NewsDetailsActivity"
            android:label="@string/powerNews">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ugarsoft.chyma.iwin.activities.base.HomeActivity" />
        </activity>
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.FAQsDetailsActivity"
            android:label="@string/powerNews">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ugarsoft.chyma.iwin.activities.SupportActivity" />
        </activity>
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.AnnouncementsDetailsActivity"
            android:label="@string/powerNews">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ugarsoft.chyma.iwin.activities.base.AnnouncementActivity" />
        </activity>
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.SupportActivity"
            android:label="@string/title_activity_support"
            android:parentActivityName="com.ugarsoft.chyma.iwin.activities.base.OtherActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ugarsoft.chyma.iwin.activities.base.OtherActivity" />
        </activity>
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.TipsActivity"
            android:label="@string/title_activity_tips"
            android:parentActivityName="com.ugarsoft.chyma.iwin.activities.base.OtherActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ugarsoft.chyma.iwin.activities.base.OtherActivity" />
        </activity>
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.BillResultActivity"
            android:label="Bill Summary"
            android:parentActivityName="com.ugarsoft.chyma.iwin.activities.base.ManageBillActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ugarsoft.chyma.iwin.activities.EstimateBillsActivity" />
        </activity>
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.RegisterWebViewActivity"
            android:label="Register"
            android:parentActivityName="com.ugarsoft.chyma.iwin.activities.base.ManageBillActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ugarsoft.chyma.iwin.activities.base.AccessActivity" />
        </activity>
        <activity
            android:name="com.ugarsoft.chyma.iwin.activities.AboutUsActivity"
            android:label="About"
            android:parentActivityName="com.ugarsoft.chyma.iwin.activities.base.HomeActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.ugarsoft.chyma.iwin.activities.base.AccessActivity" />
        </activity>
        <activity android:name="org.achartengine.GraphicalActivity" />

        <receiver
            android:name="com.google.android.gms.gcm.GcmReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.example.chyma.iwin" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.ugarsoft.chyma.iwin.gcm.GCMReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <service
            android:name="com.ugarsoft.chyma.iwin.gcm.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <service
            android:name="com.ugarsoft.chyma.iwin.gcm.RegistrationIntentService"
            android:exported="false" />

        <activity android:name="com.ugarsoft.chyma.iwin.activities.ApplianceViewActivity" />

        <service
            android:name="com.ugarsoft.chyma.iwin.service.NewsRefreshService"
            android:exported="false" />

        <receiver
            android:name="com.ugarsoft.chyma.iwin.service.AlarmReceiver"
            android:exported="true" />
        <receiver
            android:name="com.ugarsoft.chyma.iwin.service.NetworkConnectionReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

    </application>

</manifest>